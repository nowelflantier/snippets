<div id="loader-wrapper">
    <div id="loader"></div>
</div>

<script type="text/javascript">
 window.addEventListener("load", function(){
    var loader = document.getElementById("loader-wrapper");
    var form = document.querySelector('.registration-form.center-block');
    loader.style.display = "none"; // Masquer le loader
    form.style.display = "block"; // Afficher le formulaire
});


$(document).ready(function() {

  // Fonction pour mettre à jour la visibilité des billets en fonction du jour de présence sélectionné
  const updateTicketVisibility = function() {
    // Récupère la valeur sélectionnée pour le jour de présence
    const selectedDay = $("#guest\\[guest_metadata\\[jour_de_presence\\]\\]\\[\\]").val();
    const selectedCreneau = $("#guest\\[guest_metadata\\[creneau\\]\\]\\[\\]").val();

    // Sélectionne la table entière pour pouvoir manipuler le thead et les lignes de billets
    const $table = $("table.table.v-center-cells").first();

    // Récupère toutes les lignes de billets
    const $rows = $table.find("tbody tr");

    // Réinitialise l'affichage des lignes
    $rows.hide();

    if (selectedDay && selectedCreneau) {
      // Affiche le thead lorsque des valeurs sont sélectionnées
      $table.find("thead").show();

      // Affiche seulement les billets qui correspondent au jour et au créneau sélectionnés
      $rows.filter(`:contains('${selectedDay}')`).filter(`:contains('${selectedCreneau}')`).show();
    } else {
      // Cache le thead si aucune valeur de jour ou créneau n'est sélectionnée
      $table.find("thead").hide();
    }
  };

  // Attache la fonction `updateTicketVisibility` à l'événement de changement du sélecteur de jour
  $("#guest\\[guest_metadata\\[jour_de_presence\\]\\]\\[\\]").change(function() {
    console.log("Changement détecté dans le sélecteur de jour.");
    updateTicketVisibility();
  });

  // Attache également la fonction `updateTicketVisibility` au sélecteur de créneau en cas de changement
  $("#guest\\[guest_metadata\\[creneau\\]\\]\\[\\]").change(function() {
    console.log("Changement détecté dans le sélecteur de créneau.");
    updateTicketVisibility();
  });

  // Appelle la fonction au chargement de la page pour mettre à jour l'état initial
  updateTicketVisibility();
});

</script>

